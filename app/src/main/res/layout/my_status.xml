<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardCodedText"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:background="?attr/selectableItemBackground">
        <androidx.cardview.widget.CardView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:cardCornerRadius="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="0dp"
            >
            <ImageView
                android:layout_width="42dp"
                android:contentDescription="Status "
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:id="@+id/last_status_thumbnail"
                android:src="@drawable/image3"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ivy Cherop"
                android:id="@+id/status_poster_name"
                android:textColor="@color/white"
                android:textSize="19sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#C3C0C0"
                android:id="@+id/last_status_time"
                android:text="Today 12:07PM"
                />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="#A8A5A5"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent updates"
        android:layout_marginBottom="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#959393"
    />


</LinearLayout>