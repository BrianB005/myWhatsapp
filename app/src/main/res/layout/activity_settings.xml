<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardCodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="#171616">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:id="@+id/first_bar"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp"
        android:clickable="true"
        android:focusable="true"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image3"
                android:scaleType="centerCrop"
                android:contentDescription="Profile"
                android:id="@+id/my_profile_pic"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/white"
                android:textSize="23sp"
                android:layout_gravity="start"
                android:id="@+id/my_profile_username"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="#CCC3C3"
                android:textSize="18sp"
                android:layout_gravity="start"
                android:id="@+id/my_profile_about"
                />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:drawableEndCompat="@drawable/ic_baseline_qr_code_24" />
    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C5BEBE"
        android:layout_below="@+id/first_bar"
        android:id="@+id/divider"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:orientation="vertical"

        android:paddingVertical="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:id="@+id/settings_account"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="12dp"
            android:paddingHorizontal="30dp"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                app:drawableLeftCompat="@drawable/ic_baseline_vpn_key_24" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privacy,security,change number"
                    android:textSize="16sp"
                    android:textColor="#858383"
                    />
            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:drawableTint="#837E7E"
                app:drawableLeftCompat="@drawable/ic_baseline_message_24" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chats"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theme,wallpapers,chat history"
                    android:textSize="16sp"
                    android:textColor="#858383"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="12dp"
            android:paddingHorizontal="30dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                app:drawableLeftCompat="@drawable/ic_baseline_notifications_24" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message,group and call tones"
                    android:textSize="16sp"
                    android:textColor="#858383"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="12dp"
            android:paddingHorizontal="30dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                app:drawableLeftCompat="@drawable/ic_baseline_blur_circular_24" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Storage and data"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Network usage,auto-download"
                    android:textSize="16sp"
                    android:textColor="#858383"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="12dp"
            android:paddingHorizontal="30dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                app:drawableLeftCompat="@drawable/ic_baseline_help_outline_24" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help center,contact us,privacy policy"
                    android:textSize="16sp"
                    android:textColor="#858383"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="14dp"
            android:paddingHorizontal="30dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                app:drawableLeftCompat="@drawable/ic_baseline_supervisor_account_24" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invite a friend"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="designed by"
                android:textSize="20sp"
                android:textColor="#D5CFCF"
                android:fontFamily="sans-serif-condensed-medium"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brian"
                android:textSize="26sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold"
                android:drawablePadding="5dp"


                app:drawableTint="@color/white"
                app:drawableStartCompat="@drawable/ic_baseline_all_inclusive_24" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>