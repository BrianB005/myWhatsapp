<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardCodedText"
    tools:context=".CallsFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="20dp"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="center"

                android:text="To start calling contacts who have Whatsapp,tap the call icon at the bottom of your screen"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="40dp"
                android:layout_marginHorizontal="6dp"
                android:backgroundTint="#22AF19"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/open_new_typed_status"

                android:background="?attr/selectableItemBackgroundBorderless"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_ic_call_24"
                    app:tint="@color/white"
                    android:drawableTint="@color/white"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"
                    android:contentDescription="@null"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>