<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardCodedText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    android:background="@android:color/background_dark"

    tools:context=".RegisterActivityOne">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Whatsapp"
            android:textColor="#066C10"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:textSize="27sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:backgroundTint="@android:color/background_dark"
            android:layout_marginVertical="100dp"
            app:cardCornerRadius="125dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:src="@drawable/whats_app_logo"
                android:scaleType="centerCrop"
                android:contentDescription="Whatsapp logo"
                />

        </androidx.cardview.widget.CardView>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/privacy"
            android:textColor="#959C9B"
            android:textStyle="italic"
            android:textSize="16sp"
            android:id="@+id/privacy_policy"
            android:paddingHorizontal="20dp"
            android:gravity="center"
            android:textColorLink="@color/teal_200"
            android:linksClickable="true"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agree and continue"
            android:layout_marginTop="20dp"
            android:backgroundTint="#066C10"
            android:textSize="18sp"
            android:id="@+id/agree"
            android:layout_marginHorizontal="35dp"
            app:cornerRadius="9dp"
            android:layout_marginBottom="50dp"

            />

    </LinearLayout>


</RelativeLayout>