<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:ignore="HardCodedText"
    android:padding="20dp"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#494646"
        android:padding="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D4DCDC"
            android:textSize="16sp"
            android:text="You entered the phone number:"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+254 724084603"
            android:id="@+id/inputted_mobile_no"
            android:paddingTop="15dp"
            android:textColor="@color/teal_200"
            android:textStyle="bold"

            android:textSize="19sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D4DCDC"
            android:textSize="14sp"
            android:paddingVertical="15dp"
            android:text="Is this OK, or you would like to edit the number?:"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:backgroundTint="#066C10"
                android:textSize="16sp"
                android:id="@+id/edit_phone_number"


                />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:backgroundTint="#066C10"
                android:textSize="16sp"
                android:id="@+id/cancel_popup"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>